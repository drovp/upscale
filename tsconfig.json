{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": true,
		"baseUrl": "src",
		"paths": {
			"*": [
				"*"
			]
		},
		"outDir": "dist",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"newLine": "LF",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"target": "es2019",
		"types": [
			"node"
		],
		"sourceMap": false
	},
	"include": [
		"src"
	]
}